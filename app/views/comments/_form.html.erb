<%= form_with model: [current_project, @comment] do |f| %>
  <%= f.text_area :content,
                  value: @comment.content,
                  rows: 5,
                  required: 'required',
                  data: { behavior: 'mentionable' } %>
  <%= f.submit "Update comment", class: "btn btn-primary" %> or
  <%= link_to 'Cancel',
              'javascript:void(0)',
              class: 'cancel-link',
              data: { behavior: 'cancel-comment' } %>
<% end %>
