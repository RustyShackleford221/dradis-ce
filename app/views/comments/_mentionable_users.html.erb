<%# this is picked up by javascripts/snowcrash/modules/comments.js.coffee %>
<% cache(@mentionable_users) do %>
  <meta name="mentionable-users" content="<%= @mentionable_users.map do |user|
    {
      key: h(user.email),
      value: user.email,
      avatar_url: avatar_url(user)
    }
  end.to_json %>">
<% end %>
